import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int n = scanner.nextInt();
        int count = 0;
        int i = 1;
        while (count < n) {
            if (i % 2 != 0) {
                count++;
                if (count == n) {
                    System.out.println("The " + n + "th odd number after the first " + n + " odd numbers is " + i);
                    break;
                }
            }
            i++;
        }
    }
}
